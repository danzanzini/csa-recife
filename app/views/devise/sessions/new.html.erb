<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
  <h3 class="h3 mb-3 font-weight-normal">CSA Recife</h3>
  <p class="mb-3">
    Bem-vinda ao CSA Recife. Para entrar, use seu e-mail e senha.
  </p>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
    <%= f.label :email, 'E-mail', class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'email@exemplo.com' %>
  </div>

  <div class="field mb-2">
    <%= f.label :password, 'Senha', class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: '**********' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox mb-3">
      <%= f.label :remember_me  do %>
        <%= f.check_box :remember_me %> Mantenha-me conectada
      <% end %>
    </div>
  <% end %>

  <!-- %= render "devise/shared/links" %-->

  <div class="actions text-right">
    <%= f.submit "Entrar", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
