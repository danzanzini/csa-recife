<%= form_with(model: harvest) do |form| %>
  <% if harvest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(harvest.errors.count, "error") %> prohibited this harvest from being saved:</h2>

      <ul>
        <% harvest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-3 h6 mt-3">
    <div class="field col-md-8">
      Produto
    </div>
    <div class="field col-md-2">
      Quantidade disponível
    </div>
    <div class="field col-md-2">
      Quantidade pedida
    </div>
  </div>
  <%= form.fields_for :harvested_products do |f| %>
    <div class="row mb-3">
      <div class="field col-md-8">
        <%= f.label :product_name, "Produto", class: "form-label sr-only" %>
        <%= f.text_field :product_name, class: "form-control", placeholder: "Produto", readonly: true %>
      </div>
      <div class="field col-md-2">
        <label for="available_amount" class="form-label sr-only">Quantide disponível</label>
        <input type="text" readonly class="form-control" id="available_amount" value="<%= available_amount_for(f.object.product_name) %>">
      </div>
      <div class="field col-md-2">
        <%= f.label :amount, "Quantidade", class: "form-label sr-only" %>
        <%= f.number_field :amount, class: "form-control", placeholder: "Quantidade", min: 0 %>
      </div>
    </div>
  <% end %>

  <div class="actions text-right">
    <%= form.submit "Salvar pedido", class: "btn btn-primary btn-md btn-block" %>
  </div>
<% end %>
