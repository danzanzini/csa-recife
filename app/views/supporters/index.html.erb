<p id="notice"><%= notice %></p>

<div class="mt-3">
  <div class="float-left h3">
    Apoiadores
  </div>

  <div class='float-right'>
    <%= link_to 'Novo apoiador', new_supporter_path, class: 'btn btn-primary' %>
    <%= link_to 'Voltar', root_path, class: 'btn btn-secondary' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Local de Colheita</th>
      <th scope="col-sm-1">Itens</th>
      <th scope="col-sm-1">Status</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.full_name %></th>
        <td><%= user.location&.name %></td>
        <td><%= user.items_per_harvest %></td>
        <td><%= user_status(user.active) %></td>
        <td><u><%= link_to 'Editar', edit_supporter_path(user) %></u></td>
      </tr>
    <% end %>
  </tbody>
</table>
